<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.project8_3.FirstFragment"
        android:label="FirstFragment">
        <action
            android:id="@+id/action_go_to_first_fragment"
            app:destination="@id/firstFragment" />
        <action
            android:id="@+id/action_go_to_second_fragment"
            app:destination="@id/secondFragment" />
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.project8_3.SecondFragment"
        android:label="SecondFragment">
        <action
            android:id="@+id/action_go_to_third_fragment"
            app:destination="@id/thirdFragment" />
        <action
            android:id="@+id/action_go_to_second_fragment"
            app:destination="@id/secondFragment" />
    </fragment>

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.project8_3.ThirdFragment"
        android:label="ThirdFragment">
        <action
            android:id="@+id/action_go_to_forth_fragment"
            app:destination="@id/forthFragment" />
        <action
            android:id="@+id/action_go_to_second_fragment"
            app:destination="@id/secondFragment" />
    </fragment>

    <fragment
        android:id="@+id/forthFragment"
        android:name="com.example.project8_3.ForthFragment"
        android:label="ForthFragment">
        <action
            android:id="@+id/action_go_to_first_fragment"
            app:destination="@id/firstFragment" />
        <action
            android:id="@+id/action_go_to_second_fragment"
            app:destination="@id/secondFragment" />
    </fragment>

</navigation>